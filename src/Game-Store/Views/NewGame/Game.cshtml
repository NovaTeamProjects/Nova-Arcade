<div class="container">
    <h1>Create New Game</h1>
    <form action="/your-submit-url" method="post">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" placeholder="Enter game name">

        <label for="poster">Poster</label>
        <input type="image" id="poster" name="poster" src="default-poster.jpg" alt="Game Poster">

        <label for="price">Price</label>
        <input type="number" id="price" name="price" placeholder="Enter game price">

        <label for="trailer">Trailer</label>
        <input type="text" id="trailer" name="trailer" placeholder="Enter trailer URL">

        <label for="photos">Photos</label>
        <input type="text" id="photos" name="photos" placeholder="Enter photo URLs separated by commas">

        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4" placeholder="Enter game description"></textarea>

        <label for="genres">Genres</label>
        <input type="text" id="genres" name="genres" placeholder="Enter genres separated by commas">

        <label for="ratings-guide">Ratings Guide</label>
        <input type="text" id="ratings-guide" name="ratings-guide" placeholder="Enter ratings guide">

        <label for="release-date">Release Date</label>
        <input type="date" id="release-date" name="release-date">

        <label for="developer">Developer</label>
        <input type="text" id="developer" name="developer" placeholder="Enter developer name">

        <label for="publisher">Publisher</label>
        <input type="text" id="publisher" name="publisher" placeholder="Enter publisher name">

        <label for="platform">Platform</label>
        <input type="text" id="platform" name="platform" placeholder="Enter platform">

        <label for="sys-req-id">System Requirement ID</label>
        <input type="text" id="sys-req-id" name="sys-req-id" placeholder="Enter system requirement ID">

        <input type="submit" value="Create New Game">
    </form>
</div>
